{% for message in messages %}
<div class="{{ message_wrapper_class|default('my-1 p-6 pt-2 shadow-lg '~ (loop.index is odd ? 'bg-gray-50' : '')) }}">
        {{ message.content|markdown }}
        <footer class="block text-gray-800 text-sm italic">Message posté le
            {{ message.createdAt|date('d/m/Y à H:i') }}
            {{ message.authorName ? 'par ' ~ message.authorName : '' }}
        </footer>
</div>
{% endfor %}