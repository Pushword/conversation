{% for message in messages %}
<div class="mt-3 mb-3 p-6 shadow {{ loop.index is odd ? 'bg-gray-100' : '' }}">
    <div class="flex-auto p-6">
        {{ message.content|markdown }}
        <footer class="block text-gray-">Message posté le
            {{ message.createdAt|date('d/m/Y à H:i') }}
            {{ message.authorName ? 'par ' ~ message.authorName : '' }}
        </footer>
    </div>
</div>
{% endfor %}